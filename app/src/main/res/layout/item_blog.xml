<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    android:foreground="?android:attr/selectableItemBackground"
    >
    <!--
    app:cardElevation="5dp"
    app:cardMaxElevation="6dp"
    app:cardBackgroundColor="@color/main_blue_light"
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--cardview点击效果android:foreground="?android:attr/selectableItemBackground"

         android:adjustViewBounds="true"    是否保持原图长宽比
        -->
        <TextView
            android:id="@+id/text_page"
            android:text="这里是标题"
            android:ellipsize="end"
            android:textSize="50px"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/relativelayout_msg"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="作者名字"
                android:layout_marginStart="10dp"
                android:id="@+id/text_author"
                android:ellipsize="end"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:text="浏览量:"
                android:layout_width="wrap_content"
                android:paddingRight="5dp"
                android:textSize="30px"
                android:layout_toLeftOf="@+id/text_view"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="123456789987654321"
                android:id="@+id/text_view"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>