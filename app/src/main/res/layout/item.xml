<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    app:cardPreventCornerOverlap="true"
    android:background="@android:color/transparent"
    app:cardElevation="5dp"
    app:cardMaxElevation="6dp"
    >
    <!--


    app:cardBackgroundColor="@color/main_blue_light"
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <!--cardview点击效果android:foreground="?android:attr/selectableItemBackground"
     android:adjustViewBounds="true"    是否保持原图长宽比
    -->
    <ImageView
        android:id="@+id/id_network_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        />
        <TextView
            android:id="@+id/text_image"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/Relativelaout_msg"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_name_live"
                android:ellipsize="end"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/text_people_live"
                android:ellipsize="end"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>